<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kwameasante.bucketlist.Info_Activity"
    tools:showIn="@layout/activity_info_">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/item_text"
        android:layout_marginTop="18dp"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:layout_below="@+id/item_text"
        android:id="@+id/info_text"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/completion"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/done"
        android:tag="done"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/completion"
        android:layout_marginTop="20dp"
        android:text="Done!"
        android:onClick="finish_item"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/not_done"
        android:tag="not_done"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/done"
        android:layout_marginTop="10dp"
        android:text="Not Done!"
        android:onClick="still_working"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
